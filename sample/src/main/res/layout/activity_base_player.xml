<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".example.BasePlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#000000">

            <com.seagazer.liteplayer.LitePlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/progress_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Show Progress" />

            <CheckBox
                android:id="@+id/sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Auto Sensor" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/aspect_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/ratio_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="自动" />

                <RadioButton
                    android:id="@+id/ratio_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原始" />

                <RadioButton
                    android:id="@+id/ratio_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="填充" />

                <RadioButton
                    android:id="@+id/ratio_stretch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拉伸" />

                <RadioButton
                    android:id="@+id/ratio_4_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:3w" />

                <RadioButton
                    android:id="@+id/ratio_16_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:9w" />

                <RadioButton
                    android:id="@+id/ratio_21_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21:9w" />

            </RadioGroup>
        </HorizontalScrollView>

        <RadioGroup
            android:id="@+id/player_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/player_exo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="ExoPlayer" />

            <RadioButton
                android:id="@+id/player_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MediaPlayer" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/render_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/render_surface_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="SurfaceView" />

            <RadioButton
                android:id="@+id/render_texture_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextureView" />

        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="playNext"
            android:text="next" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="pausePlay"
            android:text="pause_resume" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="stopPlay"
            android:text="destroy" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="jumpToActivity"
            android:text="jump_to_activity" />

    </LinearLayout>
</ScrollView>