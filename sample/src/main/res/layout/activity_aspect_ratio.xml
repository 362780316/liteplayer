<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.seagazer.sample.example.AspectRatioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.seagazer.liteplayer.LitePlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <RadioGroup
            android:id="@+id/aspect_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/ratio_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="自动" />

            <RadioButton
                android:id="@+id/ratio_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原始" />

            <RadioButton
                android:id="@+id/ratio_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填充" />

            <RadioButton
                android:id="@+id/ratio_stretch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拉伸" />

            <RadioButton
                android:id="@+id/ratio_4_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:3w" />

            <RadioButton
                android:id="@+id/ratio_16_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:9w" />

            <RadioButton
                android:id="@+id/ratio_21_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:9w" />

        </RadioGroup>

    </LinearLayout>

</ScrollView>
